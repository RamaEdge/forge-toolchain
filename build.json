{
  "metadata": {
    "version": "1.0.0",
    "description": "ForgeOS Toolchain Build Configuration",
    "last_updated": "2025-01-01T00:00:00Z",
    "maintainer": "ForgeOS Team"
  },
  "build": {
    "directories": {
      "build": "build",
      "output": "artifacts",
      "packages": "packages/downloads"
    },
    "architecture": {
      "default": "aarch64",
      "supported": ["aarch64", "x86_64"],
      "targets": {
        "musl": "aarch64-linux-musl",
        "gnu": "aarch64-linux-gnu"
      }
    },
    "toolchain": {
      "types": ["musl", "gnu"],
      "default": "musl",
      "versions": {
        "binutils": "2.42",
        "gcc": "13.2.0",
        "glibc": "2.38",
        "musl-cross-make": "0.9.11",
        "linux": "6.6.0"
      }
    },
    "repository": {
      "name": "forgeos-toolchain",
      "version": "0.1.0",
      "arch": "aarch64",
      "forge_packages_url": "https://github.com/ramaedge/forge-packages.git"
    },
    "security": {
      "signing_key_type": "minisign",
      "signing_key_dir": "security/keys",
      "checksum_verification": true,
      "gpg_signatures": false
    },
    "build_flags": {
      "reproducible": true,
      "source_date_epoch": true,
      "static_linking": true,
      "optimization": "Os",
      "security_flags": [
        "-fno-stack-protector",
        "-fno-unwind-tables",
        "-fno-asynchronous-unwind-tables"
      ]
    },
    "musl": {
      "config": "musl-cross-make",
      "target": "aarch64-linux-musl",
      "features": {
        "static_linking": true,
        "minimal_dependencies": true,
        "edge_optimized": true
      },
      "build_options": {
        "enable_shared": true,
        "enable_static": true,
        "disable_multilib": true
      }
    },
    "glibc": {
      "config": "custom-build",
      "target": "aarch64-linux-gnu",
      "features": {
        "full_compatibility": true,
        "dynamic_linking": true,
        "server_optimized": true
      },
      "build_options": {
        "enable_shared": true,
        "enable_static": true,
        "disable_multilib": true,
        "with_sysroot": true
      }
    },
    "platforms": {
      "linux": {
        "make_jobs": "nproc",
        "make_cmd": "make",
        "dependencies": ["gcc", "g++", "make", "curl", "tar", "bash"]
      },
      "macos": {
        "make_jobs": "sysctl hw.ncpu",
        "make_cmd": "gmake",
        "dependencies": ["gcc", "g++", "gmake", "curl", "tar", "bash"]
      }
    },
    "ci_cd": {
      "enabled": true,
      "platforms": ["ubuntu-latest", "macos-latest"],
      "artifacts": {
        "upload": true,
        "retention_days": 7,
        "categories": ["toolchain", "environment", "build-report"]
      },
      "testing": {
        "verify_toolchain": true,
        "test_compilation": true,
        "integration_tests": true
      }
    }
  }
}
