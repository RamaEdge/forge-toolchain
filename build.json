{
  "metadata": {
    "version": "0.1.0",
    "description": "ForgeOS Toolchain Build Configuration"
  },
  "build": {
    "directories": {
      "build": "build",
      "output": "artifacts",
      "packages": "packages/downloads"
    },
    "architecture": {
      "default": "aarch64",
      "supported": ["aarch64", "x86_64"]
    },
    "repository": {
      "name": "forgeos-toolchain",
      "version": "0.1.0",
      "forge_os_url": "https://github.com/ramaedge/forge-os.git",
      "forge_packages_url": "https://github.com/ramaedge/forge-packages.git"
    },
    "packages": {
      "musl-cross-make": {
        "version": "0.9.11",
        "filename": "musl-cross-make-0.9.11.tar.gz",
        "category": "toolchain",
        "toolchain": "musl"
      },
      "binutils": {
        "version": "2.42",
        "filename": "binutils-2.42.tar.xz",
        "category": "toolchain",
        "toolchain": "gnu"
      },
      "gcc": {
        "version": "13.2.0",
        "filename": "gcc-13.2.0.tar.xz",
        "category": "toolchain",
        "toolchain": "gnu"
      },
      "glibc": {
        "version": "2.38",
        "filename": "glibc-2.38.tar.xz",
        "category": "toolchain",
        "toolchain": "gnu"
      },
      "linux": {
        "version": "6.6.0",
        "filename": "linux-6.6.0.tar.xz",
        "category": "toolchain",
        "toolchain": "gnu"
      }
    },
    "security": {
      "checksum_verification": true
    }
  }
}
